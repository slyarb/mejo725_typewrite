  <!-- Alternatives modal -->
  <div id="altModal" style="display:none; position:fixed; left:50%; top:16%; transform:translateX(-50%); width:720px; max-width:95%; background:var(--card); border-radius:12px; box-shadow:0 30px 60px rgba(15,23,42,0.12); padding:16px; z-index:200;">
    <div style="display:flex; justify-content:space-between; align-items:center;">
      <div style="font-weight:800">Alternative rewrites</div>
      <button class="action-btn" id="closeAlt">Close</button>
    </div>
    <div style="margin-top:12px; display:grid; grid-template-columns:1fr 1fr; gap:10px;">
      <div style="background:#f9fafb; padding:12px; border-radius:8px;"><strong>Soften</strong><div class="muted" style="margin-top:8px;" id="altSoften"></div></div>
      <div style="background:#f9fafb; padding:12px; border-radius:8px;"><strong>Direct</strong><div class="muted" style="margin-top:8px;" id="altDirect"></div></div>
      <div style="background:#f9fafb; padding:12px; border-radius:8px;"><strong>Clarify</strong><div class="muted" style="margin-top:8px;" id="altClarify"></div></div>
      <div style="background:#f9fafb; padding:12px; border-radius:8px;"><strong>Tighten</strong><div class="muted" style="margin-top:8px;" id="altTighten"></div></div>
    </div>
  </div>

  <script>
    // Lightweight heuristics for Tone·Intent Lens
    const vagueTiming = ["when you have a sec","when you have a moment","when you can","ASAP","asap","in a bit","sometime today","soon"];
    const softenWords = ["just","sorry","a bit","maybe","I think"];
    const bluntWords = ["now","immediately","ASAP","urgent","don't"];
    const composer = document.getElementById('composer');
    const flagsContainer = document.getElementById('flags');
    const lensStatus = document.getElementById('lensStatus');
    const matchCount = document.getElementById('matchCount');
    const log = document.getElementById('log');

    const profiles = document.querySelectorAll('.profile');
    let activeProfile = 'direct';
    profiles.forEach(p=>{
      p.addEventListener('click', ()=> {
        profiles.forEach(pp=>pp.classList.remove('active'));
        p.classList.add('active');
        activeProfile = p.getAttribute('data-profile');
        analyzeAndRender();
        appendLog('Recipient set to: ' + activeProfile);
      })
    });

    document.getElementById('intent').addEventListener('change', ()=> { analyzeAndRender(); appendLog('Intent set to: ' + document.getElementById('intent').value); });

    function analyzeText(text) {
      const lower = text.toLowerCase();
      const suggestions = [];
      // check vague timing
      for (const v of vagueTiming) if (lower.includes(v)) suggestions.push({type:'vague_timing', title:'Vague timing', detail:`Phrase "${v}" is ambiguous.`, severity:2});
      // intent unclear (simple heuristic: no imperative or question when action expected)
      const intent = document.getElementById('intent').value;
      if (intent === 'action') {
        // look for action verbs or deadlines
        if (!/\b(send|submit|complete|review|approve|share|deliver)\b/i.test(text) && !/\b(by\b|\bdeadline\b|\btonight\b|\bfriday\b)/i.test(text)) {
          suggestions.push({type:'intent_unclear', title:'Intent unclear', detail:'You selected "Request Action" but the message lacks a clear ask or deadline.', severity:3});
        }
      }
      // blunt or polite mismatch
      let bluntScore = 0;
      for(const b of bluntWords) if (lower.includes(b)) bluntScore++;
      let softenScore = 0;
      for(const s of softenWords) if (lower.includes(s)) softenScore++;
      if (bluntScore > 0 && activeProfile === 'anxious') {
        suggestions.push({type:'potentially_blunt', title:'Potentially blunt', detail:'This wording might feel abrupt to an anxious recipient.', severity:3});
      }
      if (softenScore > 2 && activeProfile === 'detail') {
        suggestions.push({type:'over_soften', title:'Over-softening', detail:'Multiple softeners may make your request unclear.', severity:1});
      }
      // long sentences -> tighten
      const sentences = text.split(/[.?!]\n?|\n/).map(s=>s.trim()).filter(Boolean);
      for(const s of sentences) {
        if (s.split(' ').length > 28) suggestions.push({type:'long_sentence', title:'Long sentence', detail:'Consider splitting this sentence for clarity.', severity:1});
      }
      return suggestions;
    }

    function renderFlags(suggestions) {
      flagsContainer.innerHTML = '';
      if (suggestions.length === 0) {
        lensStatus.textContent = 'All good';
        matchCount.textContent = 0;
        return;
      }
      lensStatus.textContent = 'Issues found';
      matchCount.textContent = suggestions.length;
      suggestions.forEach(s=>{
        const div = document.createElement('div');
        div.className = 'flag';
        const icon = document.createElement('div');
        icon.className = 'icon';
        icon.style.background = s.severity >=3 ? '#ef4444' : (s.severity===2 ? '#f59e0b' : '#10b981');
        icon.textContent = s.severity >=3 ? '!' : (s.severity===2 ? '⚠' : '✓');
        const body = document.createElement('div');
        const title = document.createElement('div');
        title.className = 'title';
        title.textContent = s.title;
        const desc = document.createElement('div');
        desc.className = 'desc';
        desc.textContent = s.detail;
        const actions = document.createElement('div');
        actions.className = 'actions';
        const clarBtn = document.createElement('button');
        clarBtn.className = 'action-btn';
        clarBtn.textContent = 'Clarify intent?';
        clarBtn.addEventListener('click', ()=> applySuggestion(s.type, 'clarify'));
        const addBtn = document.createElement('button');
        addBtn.className = 'action-btn';
        addBtn.textContent = 'Add context?';
        addBtn.addEventListener('click', ()=> applySuggestion(s.type, 'addcontext'));
        const softenBtn = document.createElement('button');
        softenBtn.className = 'action-btn';
        softenBtn.textContent = 'Soften phrasing?';
        softenBtn.addEventListener('click', ()=> applySuggestion(s.type, 'soften'));
        const tightenBtn = document.createElement('button');
        tightenBtn.className = 'action-btn';
        tightenBtn.textContent = 'Tighten structure?';
        tightenBtn.addEventListener('click', ()=> applySuggestion(s.type, 'tighten'));
        const directBtn = document.createElement('button');
        directBtn.className = 'action-btn';
        directBtn.textContent = 'Make more direct?';
        directBtn.addEventListener('click', ()=> applySuggestion(s.type, 'direct'));
        actions.appendChild(clarBtn);
        actions.appendChild(addBtn);
        actions.appendChild(softenBtn);
        actions.appendChild(tightenBtn);
        actions.appendChild(directBtn);
        body.appendChild(title);
        body.appendChild(desc);
        body.appendChild(actions);
        div.appendChild(icon);
        div.appendChild(body);
        flagsContainer.appendChild(div);
      });
    }

    function applySuggestion(flagType, action) {
      let text = composer.value;
      appendLog('Applied action "' + action + '" for ' + flagType);
      // naive transformations depending on action
      if (action === 'clarify') {
        if (flagType === 'intent_unclear') {
          text = text + "\n\nCould you confirm whether you can complete this by [DATE]?";
        } else {
          text = text + " (Please specify what you need.)";
        }
      }
      if (action === 'addcontext') {
        text = text.replace(/\b(the file|it|that)\b/gi, 'the Q3_metrics_v2.xlsx file');
        if (!/Q3_metrics_v2\.xlsx/i.test(text) && flagType === 'vague_timing') {
          text = text + " (Context: this is for the investor deck we're finalizing.)";
        }
      }
      if (action === 'soften') {
        // add a softener phrase
        if (!/thank you|thanks|appreciate/i.test(text)) text = text + " Thanks — I appreciate it.";
        text = "Hi — " + text;
      }
      if (action === 'tighten') {
        // split long sentences: naive approach
        text = text.replace(/,\s+/g, '. ');
      }
      if (action === 'direct') {
        // add clear ask at top
        text = "Please send the latest metrics for the deck by Friday.\n\n" + text;
      }
      composer.value = text;
      analyzeAndRender();
    }

    function analyzeAndRender() {
      const text = composer.value;
      const suggestions = analyzeText(text);
      renderFlags(suggestions);
    }

    function appendLog(msg) {
      const time = new Date().toLocaleTimeString();
      log.innerHTML = '<div>['+time+'] '+msg+'</div>' + log.innerHTML;
    }

    // wire up quick action buttons
    document.querySelectorAll('.action-btn[data-action]').forEach(btn=>{
      btn.addEventListener('click', ()=> {
        const action = btn.getAttribute('data-action');
        // for demo, apply the first flag's action
        const suggestions = analyzeText(composer.value);
        if(suggestions.length>0) {
          applySuggestion(suggestions[0].type, action);
        } else {
          appendLog('No suggestions to apply');
        }
      });
    });

    document.getElementById('applyTop').addEventListener('click', ()=> {
      const suggestions = analyzeText(composer.value);
      if(suggestions.length>0) { applySuggestion(suggestions[0].type, 'clarify'); }
      else appendLog('No top suggestion');
    });

    document.getElementById('viewAlternatives').addEventListener('click', ()=> {
      const text = composer.value;
      // produce naive alternatives
      document.getElementById('altSoften').textContent = "Hi Alex — would you be able to send the latest metrics by Friday? No rush, thanks so much.";
      document.getElementById('altDirect').textContent = "Please send the latest metrics for the deck by Friday.";
      document.getElementById('altClarify').textContent = "Can you confirm whether you can share the metrics by Friday or Monday?";
      document.getElementById('altTighten').textContent = "Send latest metrics for deck by Friday. Thanks.";
      document.getElementById('altModal').style.display = 'block';
    });
    document.getElementById('closeAlt').addEventListener('click', ()=> { document.getElementById('altModal').style.display = 'none'; });

    // initial analyze and on input
    composer.addEventListener('input', ()=> { analyzeAndRender(); });
    analyzeAndRender();
  </script>
</body>
</html>
